{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es5",
		"module": "esnext",
		"declaration": true,
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["src/**/*.stories.tsx", "src/**/*.test.tsx"]
}